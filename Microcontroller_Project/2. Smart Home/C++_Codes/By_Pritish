};


void Automatic()
{
   int exp  ;
   int xy;

   cout<< "expected temperatue setting (24 is ideal)   "<<endl;
   cin>>exp;

   cout<< " temperature reading from sensor"<<endl;
   cin>>xy;
   if(xy<exp)
   {

    cout<<"temperature is set to 24 degrees" <<endl;
    cout<<endl;
    cout<<endl;
    cout<<endl;
   }

   else
    {

      cout<<" temperature will be adjusted to 24 degrees"<<endl;
    cout<<endl;
    cout<<endl;
    cout<<endl;
    }


}


  int main()
  {

 while(1)
 {
